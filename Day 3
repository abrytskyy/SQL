--Day 3--

SELECT
SUM(amount)
COUNT(*) 
ROUND(AVG(amount), 2)
FROM payment

SELECT
SUM(amount),
COUNT(*),
ROUND(AVG(amount), 2) AS AVERAGE
FROM payment

--Challenge1: Aggregate function
SELECT 
MIN(replacement_cost),
MAX(replacement_cost),
ROUND(AVG(replacement_cost), 2) AS AVG,
SUM(replacement_cost)
FROM film

--GROUP BY

SELECT 
customer_id,
SUM(amount),
MAX(amount)
FROM payment
GROUP BY customer_id
ORDER BY customer_id
--or
ORDER BY SUM(amount) --DESC

--Challenge2: GROUP BY

SELECT 
staff_id,
SUM(amount),
COUNT(amount)
FROM payment
--WHERE amount != 0
GROUP BY staff_id
ORDER BY staff_id DESC

SELECT 
staff_id,
customer_id,
SUM(amount),
COUNT(*)
FROM payment
GROUP BY staff_id, customer_id
ORDER BY COUNT(*) DESC

--DATE
SELECT
*,
DATE(payment_date)
FROM payment

--Challenge3.1
SELECT
staff_id,
SUM(amount),
COUNT(*),
DATE(payment_date)
FROM payment
GROUP BY staff_id, DATE(payment_date)
ORDER BY SUM(amount) DESC

--Challenge 3.2
SELECT
staff_id,
SUM(amount),
COUNT(*),
DATE(payment_date)
FROM payment
WHERE amount != 0
GROUP BY staff_id, DATE(payment_date)
ORDER BY COUNT(*) DESC

--HAVING
SELECT
customer_id,
SUM(amount)
FROM payment
GROUP BY customer_id
HAVING SUM(amount)>200



